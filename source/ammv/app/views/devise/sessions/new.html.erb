<div class="container cimg">
  <div class="text-center" style="padding:50px 0">
    <div class="logo"> <h2> Associação Maria Mãe da Vida </h2></div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login-form-1 box-login">
      <form id="login-form" class="text-left">
        <div class="login-form-main-message"></div>
        <div class="main-login-form">
          <div class="login-group">
            <div class="form-group">
              <%= f.label :login %><br />
              <%= f.text_field :login, autofocus: true, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off",class: "form-control" %>
            </div>
            <div class="form-group login-group-checkbox">
              <input type="checkbox" id="lg_remember" name="lg_remember">
              <label for="lg_remember">Lembrar</label>
              </input>
            </div>
          </div>
          </p>
          <%= f.submit "Log in", class: "btn btn-lg btn-primary" %>
          <% end %>
        </div>
      </form>
    </div>
  </div>
</div>
</div>


