<div class="login-home cimg">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4 panel-center-login" >
    <br />
    <div class="panel panel-default">
      <div class="panel-heading login-color">
        <div class="text-center login-color-text"><h1>Login<h1></div>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="ls-ico-user" style="width: auto"></i>
            </span>
            <%= f.text_field :login, autofocus: true, placeholder: "UsuÃ¡rio", class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="ls-ico-shaft-right" style="width: auto"></i>
            </span>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Senha", class: "form-control" %>
          </div>
        </div>
        <div align="center"> 
          <%= f.submit "ENTRAR",class: "ls-btn-primary ls-btn-block ls-btn-lg"%>
        <% end %>
        </div>
      </div>
    </div>
  </div>
  
</div>


