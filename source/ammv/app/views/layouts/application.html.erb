<!DOCTYPE html>
<html>
  <head>
    <title>Ammv</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'default', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'default', 'data-turbolinks-track': 'reload' %>

      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>    
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Associação Maria Mãe da Vida</a>
        </div>
      <%if user_signed_in?%>  
      <!-- Collect the nav links, forms, and other content for toggling -->
        
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Usuarios", cont_users_index_path, class: 'btn btn-default'%></li>
            <li class="dropdown">
              <button class="btn btn-info navbar-btn dropdown-toggle" type="button" data-toggle="dropdown">Relatórios</button>
              <ul class="dropdown-menu">
                <li><a href="#">Diário</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="#">Semanal</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="#">Quinzenal</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="#">Mensal</a></li>
              </ul>
            </li>
            <li>&nbsp;</li>
            <li><%= button_to "Sair", destroy_user_session_path, :method => :delete, class: 'btn btn-danger navbar-btn'  %></li>
          </ul>
        </div><!-- /.navbar-collapse -->
      <%end%>
      </div><!-- /.container-fluid -->
    </nav>

    <%= yield %>
  </body>
</html>
