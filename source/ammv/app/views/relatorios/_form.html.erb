<div id="error_explanation">
  <h2><%= pluralize(@relatorio.errors.count, "error") %> prohibited this cadastro from being saved:</h2>
  <ul>
    <% @relatorio.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<nav class="navbar navbar-default" role="navigation">
  <div class="container">
    <a class="navbar-brand">  <%= link_to (image_tag("icon2.png")), root_path, class: 'navbar-brand' %></a>
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li> <%=link_to 'Inicio', root_path%></li>
        <li> <%=link_to 'Relatórios', relatorios_path%> </li>
        <li class="active"> <%=link_to 'Novo Relatório', new_relatorio_path%> </li>
        <li><%=link_to "Sair", destroy_user_session_path, :method => :delete%></li>
      </ul>
    </div>
